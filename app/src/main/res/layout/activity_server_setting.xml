<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="viewmodel"
            type="org.tangaya.quranasrclient.viewmodel.ServerSettingViewModel" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="20dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Hostname"/>

            <EditText
                android:id="@+id/hostname_input"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="hostname"
                android:text="@={viewmodel.hostname, default=`192.168.1.217`}"/>

            <TextView
                android:id="@+id/port"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="Port"/>

            <EditText
                android:id="@+id/port_input"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="port"
                android:text="@={viewmodel.port, default=8888}"/>

            <Button
                android:id="@+id/connect_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Test Connection"
                android:layout_marginTop="20dp"
                android:onClick="@{() -> viewmodel.testConnection()}"/>

            <TextView
                android:id="@+id/connection_status"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:textAlignment="center"
                android:text="@{viewmodel.connectionStatus, default=`[connection status]`}"/>

        </LinearLayout>

        <Button
            android:id="@+id/save_setting"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Save"
            android:onClick="@{() -> viewmodel.saveSetting()}"/>

        <Button
            android:id="@+id/cancel_setting"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Cancel"
            android:layout_marginBottom="20dp"
            android:onClick="@{() -> viewmodel.cancelSetting()}"/>

    </LinearLayout>

</layout>
