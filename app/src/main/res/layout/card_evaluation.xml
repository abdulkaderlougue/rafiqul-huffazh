<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data class = "EvalCardBinding">
        <variable
            name="viewmodel"
            type="org.tangaya.rafiqulhuffazh.viewmodel.ScoreDetailViewModel" />
    </data>

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        app:cardCornerRadius="4dp"
        android:elevation="8dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="10dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/ayah_num_evaluation"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@{viewmodel.ayahNum, default=`Ayat 1`}"/>


                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:text="Incorrect"
                        android:textAlignment="textEnd"
                        android:textStyle="bold"/>

                </LinearLayout>

                <TextView
                    android:id="@+id/ayah_ref_evaluation"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@{`reference : `+viewmodel.refereceArabicScript, default=`rec: بِسْمِ اللَّهِ الرَّحْمَٰنِ الرَّحِيم`}"/>

                <TextView
                    android:id="@+id/ayah_rec_evaluation"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@{`recognized: `+viewmodel.recognizedArabicTranscript, default=`rec: اللَّهِ الرَّحْمَٰنِ الرَّحِيم`}"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/eval_point"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@{`poin: `+ viewmodel.earnedPoint + `/` +viewmodel.maxPoint, default=`poin: 8/12`}"
                        android:paddingBottom="5dp"/>

                    <TextView
                        android:id="@+id/eval_result"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="missing element"
                        android:textAlignment="textEnd" />

                </LinearLayout>


            </LinearLayout>

        </LinearLayout>

    </android.support.v7.widget.CardView>

</layout>
