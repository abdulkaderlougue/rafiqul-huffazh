<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="evaluation"
            type="org.tangaya.rafiqulhuffazh.data.model.Evaluation" />
    </data>

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        app:cardCornerRadius="4dp"
        android:elevation="8dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@{evaluation.isCorrect ? @color/green : @color/red}"
                android:paddingLeft="3dp"
                android:paddingRight="3dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@{evaluation.isCorrect ? `BENAR` : `KURANG TEPAT`}"
                    android:textColor="@color/white"
                    android:padding="2dp"/>

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@{``+evaluation.description, default=`terdapat elemen hilang`}"
                    android:textAlignment="textEnd"
                    android:textColor="@color/white"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:paddingBottom="5dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@{`ref: `+evaluation.audio.get().arabic, default=`ref: بِسْمِ ٱللَّهِ ٱلرَّحْمَٰنِ ٱلرَّحِيم`}"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@{`rec: `+evaluation.audio.get().arabicTranscription, default=`rec: ٱللَّهِ ٱلرَّحْمَٰنِ ٱلرَّحِيم`}"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@{`point = `+evaluation.earnedPoints+`/`+evaluation.maxPoints, default=`poin = 9/10`}"/>
            </LinearLayout>


        </LinearLayout>

    </android.support.v7.widget.CardView>

</layout>
