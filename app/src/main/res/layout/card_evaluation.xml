<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data class = "EvalCardBinding">
        <variable
            name="viewmodel"
            type="org.tangaya.quranasrclient.viewmodel.EvalDetailViewModel" />
    </data>

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        app:cardCornerRadius="4dp"
        android:elevation="8dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="10dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/verse_num_evaluation"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@{viewmodel.verseNumber, default=`verse 1`}"/>

                    <ImageView
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        android:layout_marginLeft="8dp"
                        android:src="@drawable/speaker_24"
                        android:onClick="@{()->viewmodel.playReference()}"/>

                </LinearLayout>

                <TextView
                    android:id="@+id/verse_ref_evaluation"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@{`reference : `+viewmodel.refereceArabicScript, default=`rec: بِسْمِ اللَّهِ الرَّحْمَٰنِ الرَّحِيم`}"/>

                <TextView
                    android:id="@+id/verse_rec_evaluation"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@{`recognized: `+viewmodel.recognizedArabicTranscript, default=`rec: اللَّهِ الرَّحْمَٰنِ الرَّحِيم`}"/>

                <TextView
                    android:id="@+id/levenshtein_score"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@{`points: `+ viewmodel.earnedPoint + `/` +viewmodel.maxPoint, default=`points: 12/12`}"
                    android:paddingBottom="5dp"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/evaluation_icon"
                    android:layout_width="70dp"
                    android:layout_height="50dp"
                    android:layout_gravity="center_horizontal"
                    android:src="@{viewmodel.isCorrect ? @drawable/check_100 : @drawable/cross_red_64, default=@drawable/cross_red_64}"/>

                <TextView
                    android:id="@+id/eval"
                    android:layout_width="70dp"
                    android:layout_height="wrap_content"
                    android:text="@{viewmodel.evalStr, default=`missing element`}"
                    android:textAlignment="center"
                    android:paddingBottom="5dp"/>

            </LinearLayout>

        </LinearLayout>

    </android.support.v7.widget.CardView>

</layout>
