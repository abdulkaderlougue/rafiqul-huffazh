<?xml version="1.0" encoding="utf-8"?>
<layout  xmlns:android="http://schemas.android.com/apk/res/android">

    <data>
        <variable
            name="viewmodel"
            type="org.tangaya.quranasrclient.devspace.DevspaceViewModel" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="20dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Develepment Space"
            android:textSize="24dp"
            android:textAlignment="center"
            android:paddingTop="30dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@{viewmodel.serverStatus, default=`[server status]`}"
            android:textAlignment="center"
            android:layout_marginBottom="50dp"
            android:onClick="@{() -> viewmodel.connect()}"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Chapter: "/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <Button
                        android:layout_width="40dp"
                        android:layout_height="wrap_content"
                        android:text="-"
                        android:onClick="@{() -> viewmodel.decrementChapter() }"/>

                    <EditText
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:inputType="number"
                        android:text="@={viewmodel.chapter + ``}"
                        android:textAlignment="center"/>

                    <Button
                        android:layout_width="40dp"
                        android:layout_height="wrap_content"
                        android:text="+"
                        android:onClick="@{() -> viewmodel.incrementChapter() }"/>

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Verse: "/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <Button
                        android:layout_width="40dp"
                        android:layout_height="wrap_content"
                        android:text="-"
                        android:onClick="@{() -> viewmodel.decrementVerse()}"/>

                    <EditText
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:inputType="number"
                        android:text="@={viewmodel.verse + ``}"
                        android:textAlignment="center"/>

                    <Button
                        android:layout_width="40dp"
                        android:layout_height="wrap_content"
                        android:text="+"
                        android:onClick="@{() -> viewmodel.incrementVerse()}"/>

                </LinearLayout>

            </LinearLayout>


        </LinearLayout>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="recognize test file"
            android:onClick="@{() -> viewmodel.recognizeTestFile()}"/>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_margin="10dp"
            android:orientation="horizontal"
            android:gravity="center">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:onClick="@{() -> viewmodel.onClickRecord()}"
                android:src="@{ viewmodel.isRecording ? @drawable/stop_black_100 : @drawable/mic_black_100, default= @drawable/mic_black_100}" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:onClick="@{() -> viewmodel.playRecordedAudio()}"
                android:src="@drawable/play_black_100" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:onClick="@{() -> viewmodel.recognizeRecording()}"
                android:src="@drawable/arrow_black_100" />

        </LinearLayout>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="recognize recording"
            android:onClick="@{() -> viewmodel.recognizeRecording()}"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@{`evaluation count: ` + viewmodel.attemptCount, default=`[attempt_count]`}"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="20dp"
            android:text="transcription result:"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="@{viewmodel.result, default=`[result]`}"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="detail"
            android:onClick="@{() -> viewmodel.gotoEvalDetail()}"/>

    </LinearLayout>

</layout>