<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.LinearLayoutCompat
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.MurojaahActivity"
    android:orientation="vertical">

    <Button
        android:id="@+id/btn_mode_file"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="mode file" />

    <Button
        android:id="@+id/murojaah_next_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="next"
        android:onClick="onClickNextButton"/>

    <Button
        android:id="@+id/show_result_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="show result"
        android:onClick="showResult"/>

    <TextView
        android:id="@+id/result_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="result: none"/>

</android.support.v7.widget.LinearLayoutCompat>