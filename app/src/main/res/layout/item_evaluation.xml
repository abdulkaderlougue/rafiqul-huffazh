<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="10dp">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/verse_num_evaluation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Verse X. Correct"/>

            <ImageView
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:layout_marginLeft="8dp"
                android:src="@drawable/speaker_24"/>

        </LinearLayout>

        <TextView
            android:id="@+id/verse_ref_evaluation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="REF: waXXamsi waMuHAhA"/>

        <TextView
            android:id="@+id/verse_rec_evaluation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="REC: waXXamsi waMuHAhA"/>

        <TextView
            android:id="@+id/verse_diff_evaluation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="[diff]"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/eval"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Correct"
            android:textAlignment="center"/>

        <ImageView
            android:id="@+id/evaluation_icon"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:src="@drawable/check_100"/>

    </LinearLayout>

</LinearLayout>