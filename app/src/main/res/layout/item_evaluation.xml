<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="10dp">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/verse_num_evaluation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Verse X. Correct"/>

        <TextView
            android:id="@+id/verse_ref_evaluation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="REF: waXXamsi waMuHAhA"/>

        <TextView
            android:id="@+id/verse_rec_evaluation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="REC: waXXamsi waMuHAhA"/>

    </LinearLayout>

    <ImageView
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:src="@drawable/check_100"/>

</LinearLayout>